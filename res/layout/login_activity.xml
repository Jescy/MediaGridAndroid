<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue_background"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textColor="@color/blue_basic"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/pick_name"
            android:layout_gravity="left"
            android:textSize="15sp" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/txt_username"
                 android:singleLine="true"
                android:background="@drawable/chat_input_bg"
                android:hint="@string/hint_input_name" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_basic_bg"
                android:textColor="@android:color/white"
                android:layout_gravity="right"
                android:text="Login" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#CC0000"
            android:id="@+id/tv_msg"
            android:layout_gravity="left"
            android:textSize="15sp" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                style="@style/saved_names_button_style"
                android:id="@+id/btn_name0"
                android:layout_marginRight="5dp"
                android:text="@string/testuserA" />

            <Button
                style="@style/saved_names_button_style"
                android:focusable="true"
                android:id="@+id/btn_name1"
                android:layout_marginLeft="5dp"
                android:text="@string/testuserB" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                style="@style/saved_names_button_style"
                android:id="@+id/btn_name2"
                android:layout_marginRight="5dp"
                android:text="@string/testuserA" />

            <Button
                style="@style/saved_names_button_style"
                android:id="@+id/btn_name3"
                android:layout_marginLeft="5dp"
                android:text="@string/testuserB" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_server"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:text="@string/test_server"
                android:gravity="right"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_config"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_basic_bg"
                android:text="@string/fa_cog"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>